{
  "name": "Replit Reports Viewer",
  "description": "View Replit reports directly in HubSpot CRM with secure OAuth integration",
  "uid": "@replit-reports-viewer",
  "version": "1.0.0",
  "scopes": ["crm.objects.contacts.read", "crm.objects.companies.read"],
  "public": true,
  "supportEmail": "support@your-company.com",
  "extensions": {
    "crm": {
      "cards": [
        {
          "file": "./extensions/report-viewer-card.json"
        }
      ]
    }
  },
  "auth": {
    "type": "oauth2",
    "initiateUri": "https://your-oauth-bridge.vercel.app/api/auth/install"
  }
}
